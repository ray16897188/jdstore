
<div class="container-fluid">

  <div class="row">
    <div class="col-md-10">

    <br>

    <div class="row clearfix">
      <% @products.each do |product|%>
      <div class="col-sm-6 col-md-3">
        <div class="thumbnail"  style="opacity:0.95;">
          <div class="text-center">
            <% if product.photos.present? %>
            <%= link_to image_tag(product.photos[0].url(:thumb)), admin_product_path(product) %>
            <% else %>
            <%= link_to image_tag($DEFAULT_THUMB_IMAGE), admin_product_path(product) %>
            <% end %>

          </div>

          <div class="caption text-left">
            <h5><%= link_to product.title, product_path(product) %></h5>
            <p><%= simple_format(product.description) %></p>
            <%= link_to "编辑", edit_admin_product_path(product), class: "btn btn-sm btn-primary"%>
            <%= link_to "下架", "#", method: :post, class: "btn btn-sm btn-warning", data: { confirm: "确认下架产品？"}%>
            <%= link_to "删除", admin_product_path(product), method: :delete, class: "btn btn-sm btn-danger", data: { confirm: "确认删除产品？"}%>
          </div>
        </div>
      </div>
      <% end %>
    </div>

  </div>

  <div class="col-md-2">
    <%= link_to("发布新的产品", new_admin_product_path, class:"btn btn-primary pull-right btn-lg", style: "margin-top: 20px") %>
  </div>
  </div>





</div>

